{{!
    @template local_levitate/options

    Example context (json):
    {
        "maxval": 90,
        "minval": 0,
        "All_courses_count": 180
    }
}}
<div class="filters-summary">
<p id="total_course_value" class="hl-filter" hidden>181
</p>
<ul class="hl-filters">
{{#jsondata}}
    <li>
        <label id="{{key}}" class="hl-filter">
            <input class="{{key}}" name="hlfilters" type="radio" value="{{key}}">
            <h4 class="hl-title">{{name}}</h4>
            <span class="chevron-down fa fa-chevron-down"></span>
        </label>
        {{#isTagOptions}}
            <div class="hl-FiltersOptions {{key}}">
                <ul class="hl-values hl-hidden">
                    {{{tagsoptions}}}
                </ul>
            </div>
        {{/isTagOptions}}
    </li>
{{/jsondata}}
</ul>
</div>
</div>
</div>



